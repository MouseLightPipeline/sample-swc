div(class="row", ng-controller="tracingTableController")
  div(class="col-sm-12")
    div
      dir-pagination-controls(template-url="/lib/dirPagination.tpl.html", boundary-links="true" pagination-id="traces")
    table(class="table table-sm", ng-show="tracingService.resourcesAreAvailable && tracingService.tracings.length > 0")
      thead
        tr
          th File
          th Annotator
          th Length (Âµm)
          th Neuron
      tbody
        tr(dir-paginate="s in tracingService.tracings | itemsPerPage: itemsPerPage" pagination-id="traces" current-page="currentPage")
          td {{s.filename}}
          td {{s.annotator}}
          td {{s.lengthMicrometers}}
          td {{neuronDisplayForId(s.neuronId)}}
  div(class="col-sm-12")
    div(class="centered" ng-show="tracingService.resourcesAreAvailable && tracingService.samples.length == 0")
      h5 There are no tracings in the database.  Upload tracings in the "Contribute" section.
  div(class="col-sm-12")
    div(class="centered" ng-show="!tracingService.resourcesAreAvailable")
      i(class="fa fa-spinner fa-spin" style="font-size:48px")
