block content
  div(class="blue section")
    div(class="row centered")
      h1 Sample and Neuron Manager
      hr(class="partial")
      p An interactive service to manage sample definitions and related information.
    div(class="row")
      h3(class="centered") Services Provided
    br
    div(class="row")
      div(class="col-md-2 col-xs-1 centered")
      div(class="col-md-4 col-xs-5 centered")
        a(href="#upload" class="iconlink")
          i(class="fa fa-plus-circle fa-3x")
          p(class="lead") Create definitions
      div(class="col-md-4 col-xs-5 centered")
        a(href="#search" class="iconlink")
          i(class="fa fa-search fa-3x")
          p(class="lead") Query definitions
  div(class="orange section")
    div(class="row")
      div(class="col-sm-12")
        h2(class="centered") SUMMARY
    include ./partials/_summary
  div(class="blue section" id="query-tables")
    div(class="row")
      div(class="col-sm-12")
        h2(class="centered") SAMPLES
    div(class="row")
      div(class="col-sm-12")
        include ./partials/_sampleTable
    div(class="row")
      div(class="col-sm-2")
      div(class="col-sm-8")
        include ./partials/_createSample
      div(class="col-sm-2")
  div(class="orange section", id="create")
    div(class="row")
      div(class="col-sm-12")
        h2(class="centered") NEURONS
    div(class="row")
      div(class="col-sm-12")
        include ./partials/_neuronTable
    div(class="row")
      div(class="col-sm-2")
      div(class="col-sm-8")
        include ./partials/_createNeuron
      div(class="col-sm-2")
  div(class="blue section")
    div(class="row")
      div(class="col-sm-12")
        h2(class="centered") DIAGNOSTICS
    include ./partials/_diagnostics
  div(id="footer", class="container-fluid dark") Copyright Â© 2016 Howard Hughes Medical Institute
  script $.material.init();
