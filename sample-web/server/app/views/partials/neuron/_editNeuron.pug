div(class="modal fade" id="editNeuronModal" tabindex="-1" role="dialog" aria-labelledby="editNeuronModalLabel" aria-hidden="true" ng-controller="editNeuronController")
  div(class="modal-dialog" role="document")
    div(class="modal-content")

      div(class="modal-header accent")
        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
          i(class="material-icons") cancel
        h3(class="modal-title" id="myModalLabel") {{title}}

      div(class="modal-body")
        form
          div(class="form-group")
            label(class="control-label" for="editNeuronTag") Tag
            input(type="text", class="form-control", id="editNeuronTag" ng-model="tag")
          div(class="form-group")
            label(class="control-label" for="editNeuronKeywords") Keywords
            input(type="text", class="form-control", id="editNeuronKeywords" ng-model="keywords")
          div(ng-class="['form-group', {'has-warning': !isValidSomaLocation()}]")
            label(class="control-label" for="editNeuronSoma") Soma Location (x, y, z) Âµm
            input(type="text", class="form-control", id="editNeuronSoma" ng-model="somaLocation")
            p(class="help-block") Enter three comma-separated values with or without bounding parentheses

      div(class="modal-footer")
        button(type="button" class="btn" data-dismiss="modal") Cancel
        button(type="button" class="btn btn-info btn-raised" ng-disabled="!isValidSomaLocation()" ng-click="updateNeuron()") Update
